<h1> Your posts: </h1>

<% @posts.each do |post| %>
  <p><%= simple_format post.message %></p>
  <%= post.created_at.strftime("%d %B %Y %H:%M") %>
  <p><%= link_to 'Delete', [current_user, post], :method => :delete  %></p>
  <p><%= link_to 'Edit', [current_user, post]  %></p>
<% end %>
