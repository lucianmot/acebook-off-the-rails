<h1> Your posts: </h1>
      
  <% @posts.each do |post| %>
    <div class="container">
      <div class="notification">
        <p class="title"><%= simple_format post.message %></p>
        <p class="subtitle"><%= post.formatted_date_time %></p>
        <p><%= link_to 'Delete', [current_user, post], :method => :delete  %></p>
        <p><%= link_to "Edit", edit_user_post_path(current_user, post) %></p>
      </div>
    </div>          
  <% end %>           
      
</br>
</br>
<%= link_to "View All Posts", posts_path %>
<br>
<%= link_to "New post", new_user_post_path %>
<br>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
