<h1> Acebook Wall </h1>

<% @posts.each do |post| %>
  <h3><%= simple_format post.message %></h3>
  <%= post.formatted_date_time %>
  <br>
  <%= post.user_email %>
  <br>
  <%= link_to "Show", user_post_path(current_user, post) %>
<% end %>
<br>
<%= link_to "View Your Posts", user_posts_path(current_user) %>
